<%= render 'shared/error', obj: @recipe %>
<div class="row">
    <div class ="well col-md-8 col-md-offset-2">
        <%= form_for(@recipe, html: { multipart: true }) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        
        <%= f.label :summary %>
        <%= f.text_field :summary %>
        
        <%= f.label :desciprion %>
        <%= f.text_area :description, rows: 10%>
        
        <span class="picture">
          <%= f.file_field :picture, accept: 'image/jpg,image/gif,image/png' %>
        </span>
        
        <%= f.submit(@recipe.new_record? ? 'Create Recipe' : 'Edit Recipe', class: "btn btn-success") %>
        <% end %>
    </div>
</div>


<style> 
.well {
  background-color: #EDEDED;
}


input, textarea, select, .uneditable_input {
  border: 1px solid #d2d2d2;
  border-radius: 7px;
  width: 100%;
  margin-bottom: 15px;
}

input {
  height: auto !important;
}
</style>

<script type="text/javascript">
  $('#recipe_picture').bind('change', function() {
    size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum File Size is 5 mb. PLease choose a smaller file');
    }
  });
</script>